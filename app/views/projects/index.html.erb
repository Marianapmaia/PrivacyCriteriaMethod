<p id="notice"><%= notice %></p>

<p>
  <h1>Projects Dashboard</h1>
  Create a new project to get start!
</p>

<%= button_to 'New Project', new_project_path, method: :get, class: "btn btn-primary" %></br>

<h4>My Projects</h4>

<table class = "table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>

<h4>Shared Projects</h4>

<table class = "table">
  <thead>
    <tr>
      <th>Name</th>
      <td>Description</td>
    </tr>
  </thead>
  <tbody>
    <% @shareds.each do |shar| %>
      <tr>
        <td><%= link_to shar.name, project_path(shar) %></td>
        <td><%= shar.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

